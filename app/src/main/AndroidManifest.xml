            android:exported="false" />
        <activity
            android:name="com.exert.wms.returns.purchaseReturn.item.PurchaseReturnQuantityActivity"
            android:exported="false" />
        <activity
            android:name="com.exert.wms.returns.purchaseReturn.item.PurchaseReturnItemActivity"
            android:exported="false" />
        <activity
            android:name="com.exert.wms.delivery.deliveryNote.item.DeliveryNoteQuantityActivity"
            android:exported="false" />
