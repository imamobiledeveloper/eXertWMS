            android:name="com.exert.wms.delivery.deliveryNote.item.DeliveryNoteItemActivity"
            android:exported="false" />
        <activity
            android:name="com.exert.wms.delivery.deliveryReceipt.item.DeliveryReceiptQuantityActivity"
