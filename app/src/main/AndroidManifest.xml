<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.exert.wms">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="com.exert.wms.ExertWmsApp"
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".itemStocks.warehouse.WarehouseStockActivity"
            android:exported="false" />
        <activity
            android:name=".itemStocks.status.ItemStockStatusActivity"
            android:exported="false" />
        <activity
            android:name=".splash.SplashActivity"
            android:configChanges="screenSize|smallestScreenSize|fontScale|density"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".itemStocks.ItemStocksActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|adjustResize"/>
        <activity
            android:name=".home.HomeActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|adjustResize"/>
        <activity
            android:name=".login.LoginActivity"
            android:configChanges="screenSize|smallestScreenSize|fontScale|density"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>