<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="EdittextError">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TextViewLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewBoldLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="toolbarTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Spinner">
        <item name="android:dividerHeight">1dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:divider">@color/grey_50</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">@dimen/margin_15dp</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerDivider</item>
    </style>

    <style name="SpinnerDivider" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">@color/grey_50</item>
        <item name="android:paddingStart">@dimen/margin_15dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:minWidth">120dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">@dimen/margin_15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_bg_selector</item>
    </style>

    <style name="TextViewWithDrawableStyle">
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@drawable/rectangle_blue_outline_bg</item>
    </style>

    <style name="EditTextDisabledStyle">
        <item name="android:layout_marginTop">@dimen/margin_12dp</item>
        <item name="android:enabled">false</item>
        <item name="android:background">@drawable/edittext_disabled_rectangle_bg</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>

    <style name="EditTextEnabledStyle">
        <item name="android:layout_marginTop">@dimen/margin_12dp</item>
        <item name="android:background">@drawable/edittext_disabled_rectangle_bg</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>
</resources>