<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="itemDto"
            type="com.exert.wms.itemStocks.api.ItemsDto" />

        <variable
            name="labelOne"
            type="String" />

        <variable
            name="labelTwo"
            type="String" />

        <variable
            name="labelThree"
            type="String" />

        <variable
            name="labelFour"
            type="String" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemNameManufactureParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/itemDetailsLabel"
            style="@style/TextViewHeaderBlueLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/item_details"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/itemNameEnglishLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15dp"
            android:minHeight="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemDetailsLabel">

            <TextView
                android:id="@+id/itemNameEnglishLabel"
                style="@style/TextViewGreyLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="@{labelOne}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/item_name_english" />

            <TextView
                style="@style/TextViewGreyLabel"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.15"
                android:gravity="center"
                android:text="@string/semicolon" />

            <TextView
                android:id="@+id/itemNameEnglishEditText"
                style="@style/TextViewBold14Label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.15"
                android:text="@{itemDto.ItemName}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemNameEnglishLabel"
                tools:text="sample item name sample item name" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemNameArabicLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemNameEnglishLayout">

            <TextView
                android:id="@+id/itemNameArabicLabel"
                style="@style/TextViewGreyLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="@{labelTwo}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/item_name_arabic" />

            <TextView
                style="@style/TextViewGreyLabel"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.15"
                android:gravity="center"
                android:text="@string/semicolon" />

            <TextView
                android:id="@+id/itemNameArabicEditText"
                style="@style/TextViewBold14Label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.15"
                android:padding="@dimen/margin_5dp"
                android:text="@{labelTwo == (@string/manufacturer) ? itemDto.manufacturer : itemDto.ItemNameAlias}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemNameArabicLabel"
                tools:text="sample item name arabic" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemStockLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemNameArabicLayout">

            <TextView
                android:id="@+id/itemStockLabel"
                style="@style/TextViewGreyLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="@{labelThree}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/stock" />

            <TextView
                style="@style/TextViewGreyLabel"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.15"
                android:gravity="center"
                android:text="@string/semicolon" />

            <TextView
                android:id="@+id/itemStockEditText"
                style="@style/TextViewBold14Label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.15"
                android:padding="@dimen/margin_5dp"
                android:text="@{labelThree == (@string/part_code) ? itemDto.itemPartCode : itemDto.getStockString()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemStockLabel"
                tools:text="1000.00" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemManufactureLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemStockLayout">

            <TextView
                android:id="@+id/itemManufactureLabel"
                style="@style/TextViewGreyLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="@{labelFour}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/manufacturer" />

            <TextView
                style="@style/TextViewGreyLabel"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.15"
                android:gravity="center"
                android:text="@string/semicolon" />

            <TextView
                android:id="@+id/itemManufactureEditText"
                style="@style/TextViewBold14Label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.15"
                android:padding="@dimen/margin_5dp"
                android:text="@{labelFour == (@string/total_stock) ? itemDto.getStockString() : (labelFour == (@string/warehouse) ? itemDto.getWarehouseString() : itemDto.Manufacturer) }"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemManufactureLabel"
                tools:text="Item manufacturer" />

        </LinearLayout>

        <View
            android:id="@+id/dividerView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemManufactureLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>