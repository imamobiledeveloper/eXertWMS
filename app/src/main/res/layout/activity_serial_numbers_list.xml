<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.exert.wms.itemStocks.ItemStocksViewModel" />

        <variable
            name="itemDto"
            type="com.exert.wms.itemStocks.api.ItemsDto" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemStocksStatusLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/itemStocksScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/itemNameManufactureLayout"
                    layout="@layout/item_details_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:labelOne="@{@string/item_name}"
                    app:labelTwo="@{@string/manufacturer}"
                    app:labelThree="@{@string/part_code}"
                    app:labelFour="@{@string/warehouse}"
                    app:itemDto="@{itemDto}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/warehouseListLabel"
                    style="@style/TextViewHeaderBlueLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/serial_nos_list"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/itemNameManufactureLayout" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/serialNumbersListRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/warehouseListLabel"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_serial_numbers_list_item_layout" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinateLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>