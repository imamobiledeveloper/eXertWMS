<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <stroke android:width="16dp" android:color="@color/white" />
            <solid android:color="@color/white" />
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">
            <stroke android:width="16dp" android:color="@color/blue_dark" />
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <item android:start="15dp"  >
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/grey_dark" />
            <solid android:color="@color/white" />
            <corners android:topRightRadius="12dp"
                android:bottomRightRadius="12dp"/>
        </shape>
    </item>

</layer-list>